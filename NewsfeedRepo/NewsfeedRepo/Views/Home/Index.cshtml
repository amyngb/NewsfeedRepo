@model IEnumerable<NewsfeedRepo.Models.Article>
@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron">
	<h1>Lorem Ipsum Blog</h1>
	<p class="lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
</div>

<div class="row">
	@if (User.Identity.IsAuthenticated)
	{
		<div class="col-md-6">
			@Html.Partial("CreateArticle", new NewsfeedRepo.Models.Article())
		</div>
	}

		<div class="col-md-6">

			<h2>Recent Posts</h2>

			@{
				if (Model == null)
				{
					<h4>No posts to display</h4>
				}
				else
				{
					int i = 0;
					foreach (var article in Model)
					{
						<p><b>Title: </b>@article.Title</p>
						<p><b>Posted by: </b>@article.Author</p>
						<p><b>Date: </b>@article.DatePosted</p>
						<p>@article.Body</p>
						if (article.Comments != null)
						{
							foreach (var comment in article.Comments)
							{
								<p><b>Comment: </b>@comment.Comment</p>
							}
						}

						<div class="row">
							@if (article.Likes != null)
							{
								<div class="col-sm-1">@article.Likes.Count</div>
							}							
							<div class="col-sm-1">
								@using (Html.BeginForm("CreateLike", "Home", FormMethod.Post))
								{
								var likeModel = new NewsfeedRepo.Models.ArticleLike();
								<input type="hidden" name="ArticleId" value="@i" />
								<input type="submit" class="btn btn-default" value="Like" />
								}
							</div>
						</div>					

						using (Html.BeginForm("CreateComment", "Home", FormMethod.Post))
						{
							var commentModel = new NewsfeedRepo.Models.ArticleComment();
							@Html.AntiForgeryToken()

							<div class="form-horizontal">
								<div class="form-group">
									@Html.LabelFor(model => commentModel.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
									<div class="col-md-10">
										@Html.EditorFor(model => commentModel.Comment, new { htmlAttributes = new { @class = "form-control" } })
									</div>
								</div>
								<input type="hidden" name="ArticleId" value="@i" />
								<div class="form-group">
									<div class="col-md-offset-2 col-md-10">
										<input type="submit" value="Submit" class="btn btn-default" />
									</div>
								</div>
							</div>
						}

						i++;
					}
				}
			}
		</div>
</div>